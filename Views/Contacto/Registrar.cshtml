
@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header text-white bg-dark">
                <h3 class="card-title">Nuevo Contacto</h3>
            </div>           
            <div class="card-body text-white bg-secondary mb-3">
                <form action="@Url.Action("Registrar", "Contacto")" method="post">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="Nombre" placeholder="Juanito Banana" />
                    </div>
                    <div class="form-group">
                        <label>Apellido</label>
                        <input type="text" class="form-control" name="Apellido" placeholder="Juanito Banana" />
                    </div>
                    <div class="form-group">
                        <label>Teléfono</label>
                        <input type="text" class="form-control" name="Telefono" placeholder="800-999-80-80" />
                    </div>
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" class="form-control" name="Correo" placeholder="ejemplo@mail.com" />
                    </div><hr />
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a class="btn btn-warning" href="@Url.Action("Index", "Contacto")">Volver</a> 
                </form>
            </div>
        </div>
    </div>
</div>
